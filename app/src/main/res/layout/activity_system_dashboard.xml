<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/garden_back"
    tools:context=".System_Dashboard">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:background="@android:color/holo_green_light"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="418dp"
            android:layout_height="44dp"
            android:background="@android:color/holo_green_dark"
            android:text="System Dashboard"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TableLayout
            android:layout_width="475dp"
            android:layout_height="719dp"
            android:background="@drawable/ba"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="129dp">

                <ImageView
                    android:id="@+id/plant_img"
                    android:layout_width="179dp"
                    android:layout_height="126dp"
                    android:clickable="true"
                    app:srcCompat="@mipmap/plant_fornt"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/soil_fert"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/soil_front" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="193dp"
                    android:layout_height="match_parent"
                    android:text="Plant Suggestion"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:text="Soil And Fertilzer Prediction"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="277dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="173dp"
                    android:layout_height="168dp"
                    app:srcCompat="@mipmap/front_3d" />

                <ImageView
                    android:id="@+id/iotm"
                    android:layout_width="221dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/aquaponic_front" />

            </TableRow>

            <TableRow
                android:layout_width="397dp"
                android:layout_height="39dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="194dp"
                    android:layout_height="match_parent"
                    android:text="3D Crop"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IOT Measurements"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fish"
                    android:layout_width="189dp"
                    android:layout_height="139dp"
                    app:srcCompat="@drawable/f" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/about_us_f" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fish Diesease Detection"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About the app"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>